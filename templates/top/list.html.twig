<div class="event-list">
	<table>
		<tr class="item-row">
			<td></td>
			<td></td>
			<td>収支</td>
			<td>
				{% if  sum >= 0 %}+{{sum | number_format(0, '.', ',')}}{% endif %}
			</td>
			<td>
				{% if  sum < 0 %}{{sum | number_format(0, '.', ',')}}{% endif %}
						</td>
		</tr>
		{% for key, item in items %}
			<tr class="item-row">
				<td>{{item.date | format_datetime('short', 'none')}}</td>
				<td>{{item.other}}</td>
				<td>{{item.c_html | raw}}{{item.category_name}}</td>
				{% if item.option == 0 %}
					<td class="plus"></td>
					<td class="minus">-{{item.amount | number_format(0, '.', ',')}}</td>
				{% else %}
					<td class="plus">+{{item.amount | number_format(0, '.', ',')}}</td>
					<td class="minus"></td>
				{% endif %}
				<td><a href="edit.php?id={{item.event_id}}"><button class="btn">編集</button></a></td>
				<td>
					<form action="" method="post">
						<input type="hidden" name="event_id" value="{{item.event_id}}">
						<button class="btn" name="submit" value="delete">削除</button>
					</form>
				</td>
			</tr>
		{% endfor %}
	</table>
</div>
	