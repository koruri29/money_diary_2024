<div class="event-list-container">

	<table>
		<thead>
			<tr class="item-row">
				<td></td>
				<td></td>
				<td>収支</td>
				<td class="plus-green">
					{% if  sum >= 0 %}+{{sum | number_format(0, '.', ',')}}{% endif %}
				</td>
				<td class="minus-red">
					{% if  sum < 0 %}{{sum | number_format(0, '.', ',')}}{% endif %}
				</td>
			</tr>
		</thead>
		<tbody>
			{% for key, item in items %}
				{# 入出金の1件分 #}
				<tr class="item-row">
					<td>{{item.date | format_datetime('short', 'none')}}</td>{# 日付 #}
					<td class="list-other">{{item.other}}</td>{# 備考 #}
					<td>{{item.c_html | raw}}{{item.category_name}}</td>{# 支出・収入カテゴリー #}
					{# 支出か収入かで表示場所を変える #}
					{% if item.option == 0 %}
						<td class="list-plus"></td>
						<td class="list-minus">-{{item.amount | number_format(0, '.', ',')}}</td>
					{% else %}
						<td class="list-plus">+{{item.amount | number_format(0, '.', ',')}}</td>
						<td class="list-minus"></td>
					{% endif %}

					{# 編集・削除ボタン #}
					<td><a href="edit.php?id={{item.event_id}}"><button class="btn edit">編集</button></a></td>
					<td>
						<form name="form_delete" action="" method="post">
							<input type="hidden" name="event_id" value="{{item.event_id}}">
							<input type="hidden" name="send" value="delete">
							<button class="btn send_btn delete" name="send" value="delete">削除</button>
						</form>
					</td>

				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
	