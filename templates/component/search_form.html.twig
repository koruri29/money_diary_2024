<div class="search-form-container">
<h2>{{title}}</h2>

<form name="form" action="" method="post" class="event-form">

	<input type="hidden" name="token" value="{{token}}">
	<input type="hidden" name="send" value="search">

	<div class="event-inputs">
		<dl class="dl-input search-dl">
			<dt><label class="input-label" for="min_date">日付</label></dt>
			<dd><input type="date" id="min_date" name="min_date"> ～ </dd>
			<dd><input type="date" id="max_date" name="max_date"></dd>
		</dl>

		<dl class="dl-input search-dl">
			<label class="input-label" for="min_amount">金額</label>
			<input id="min_amount" type="number" min="0" name="min_amount">
			～ 
			<input id="max_amount" type="number" min="0" name="max_amount">
		</dl>

		<dl class="dl-input">
			<dd>
				<dt class="input-label">振分</dt>
				<label for="all_events">すべて</label>
				<input type="radio" name="option" value="all_events" id="all_events" checked>
				<label for="outgo">支出</label>
				<input type="radio" name="option" value="outgo" id="outgo">
				<label for="income">収入</label>
				<input type="radio" name="option" value="income" id="income">
				{# <label for="exchange">振替</label>
				<input type="radio" name="option" value="exchange" id="exchange"> #}
			</dd>
		</dl>


		<div class="categories grid search-categories">
				<div class="item-category grid-item">
					<input class="category-radio"  type="radio" name="category_id" id="unselected" checked>
					<label class="category-label" for="unselected"><i class="fa-solid fa-question"></i>未選択</label>
				</div>
			{% for key, category in categories %}
					<div class="item-category grid-item">
						<input class="category-radio"  type="radio" name="category_id" id="{{category.category_id}}"
						value="{{category.category_id}}" {% if preset.category_id == category.category_id %}checked{% endif %}>
						<label class="category-label" for="{{category.category_id}}">{{category.i_html | raw}}{{category.category_name}}</label>
					</div>
			{% endfor %}
			
		</div>

		<input type="hidden" name="wallet_id" value="1">

	</div>

	
	<dl class="dl-other search-other">
		<dt><label class="input-label" for="other">備考</label></dt>
		<dd><textarea class="other-textarea" name="other" id="other" cols="32" rows="4">{{preset.other}}</textarea></dd>
	</dl>

	<button class="btn send_btn search-btn" name="send" value="search">検索</button>

</form>
</div>
